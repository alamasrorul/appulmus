<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminLagu.UploadLagu"
    android:orientation="vertical"
    android:background="@drawable/backgroundwhite"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:text="Upload Lagu"
        android:textSize="40dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:text="Judul Lagu"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/JdlLagu"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/selectmp3"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:onClick="onklikMp3"
        android:layout_height="60dp"
        android:text="Browse Lagu (Mp3)"
        />

    <TextView
        android:id="@+id/notificationmp3"
        android:layout_width="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"

        android:text="No File Selected"
        android:textSize="15dp" />

    <Button
        android:id="@+id/selectpdf"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:onClick="onklikpdf"
        android:text="Browse Lirik (PDf)"
        />

    <TextView

        android:id="@+id/notificationpdf"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:text="No File Selected"
        />

    <Button
        android:id="@+id/upload"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Upload"
        android:onClick="onklikUpload"
        />
    <Button
        android:id="@+id/ListLagu"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="200dp"
        android:onClick="ListLagu"
        android:layout_height="60dp"
        android:text="List Lagu"
        />
</LinearLayout>